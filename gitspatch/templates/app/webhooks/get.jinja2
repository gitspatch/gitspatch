{% extends "app/layout.jinja2" %}

{% import "macros/buttons.jinja2" as buttons %}

{% block content %}
{% if token %}
<div class="rounded-md bg-green-50 p-4">
  <div class="flex">
    <div class="shrink-0">
      <svg class="size-5 text-green-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true" data-slot="icon">
        <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="ml-3">
      <h3 class="text-sm font-medium text-green-800">Webhook created!</h3>
      <div class="mt-2 text-sm text-green-700">
        <p>Here is your secret webhook URL. Save it somewhere safe, it'll be shown only once!</p>
      </div>
      <div class="mt-4 flex gap-2">
        <pre class="text-sm rounded-md border p-2 border-1 border-green-500 bg-green-100 shadow-sm">{{ request.url_for('webhook:webhook', token=token) }}</pre>
        {{ buttons.clipboard(request.url_for('webhook:webhook', token=token), class="text-green-800 hover:text-green-900") }}
      </div>
    </div>
  </div>
</div>
{% endif %}
{% endblock %}
